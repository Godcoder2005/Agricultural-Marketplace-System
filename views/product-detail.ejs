<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Farmix</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2ecc71;
            --secondary-color: #f1c40f;
            --dark-color: #2c3e50;
            --light-color: #ecf0f1;
            --accent-color: #e74c3c;
            --border-radius: 10px;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .navbar {
            padding: 15px 0;
            background: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-size: 28px;
            font-weight: 700;
            color: var(--primary-color) !important;
        }

        .nav-link {
            color: var(--dark-color) !important;
            font-weight: 500;
            margin: 0 12px;
            position: relative;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: var(--primary-color) !important;
        }

        .nav-link.active {
            color: var(--primary-color) !important;
            font-weight: 600;
        }

        /* Breadcrumb */
        .breadcrumb {
            margin: 30px 0;
            font-size: 14px;
        }

        .breadcrumb-item a {
            color: var(--dark-color);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: var(--primary-color);
        }

        /* Product Detail */
        .product-detail-container {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.07);
            margin-bottom: 40px;
        }

        .product-image-container {
            height: 400px;
            background-color: #f8f9fa;
            overflow: hidden;
            position: relative;
        }

        .product-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            background: var(--primary-color);
            color: white;
            font-size: 12px;
            font-weight: 600;
            padding: 5px 15px;
            border-radius: 50px;
            z-index: 2;
        }

        .product-info-container {
            padding: 30px;
        }

        .product-category {
            color: var(--primary-color);
            font-size: 14px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .product-name {
            font-size: 32px;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 20px;
        }

        .product-price {
            font-size: 28px;
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .product-price .currency {
            font-size: 18px;
            margin-right: 2px;
        }

        .product-description {
            font-size: 16px;
            color: #555;
            line-height: 1.8;
            margin-bottom: 30px;
        }

        .product-meta {
            display: flex;
            gap: 30px;
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        .meta-item {
            display: flex;
            align-items: center;
        }

        .meta-item i {
            color: var(--primary-color);
            margin-right: 10px;
            font-size: 18px;
        }

        .meta-item span {
            font-size: 15px;
            color: #555;
        }

        .seller-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: var(--border-radius);
            margin-bottom: 30px;
        }

        .seller-info h4 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-color);
        }

        .seller-info p {
            margin-bottom: 5px;
            font-size: 15px;
            color: #555;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .quantity-selector label {
            margin-right: 15px;
            font-weight: 500;
        }

        .quantity-selector .form-select {
            width: 100px;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
        }

        .btn-add-cart, .btn-buy-now {
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 500;
            flex: 1;
            text-align: center;
            transition: all 0.3s;
            border: none;
        }

        .btn-add-cart {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-buy-now {
            background-color: var(--secondary-color);
            color: var(--dark-color);
        }

        .btn-add-cart:hover {
            background-color: #27ae60;
        }

        .btn-buy-now:hover {
            background-color: #f39c12;
        }

        /* Related Products */
        .related-products {
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .related-products h2 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 30px;
            color: var(--dark-color);
            position: relative;
            padding-left: 15px;
        }

        .related-products h2::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 5px;
            background-color: var(--primary-color);
            border-radius: 5px;
        }

        .product-card {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.07);
            transition: all 0.3s;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .product-card-image {
            height: 200px;
            background-color: #f8f9fa;
            overflow: hidden;
        }

        .product-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .product-card:hover .product-card-image img {
            transform: scale(1.05);
        }

        .product-card-info {
            padding: 20px;
        }

        .product-card-category {
            color: var(--primary-color);
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .product-card-name {
            font-size: 16px;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 10px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .product-card-price {
            font-size: 16px;
            color: var(--primary-color);
            font-weight: 700;
        }

        /* Notifications */
        .notification-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }

        .alert {
            border-radius: var(--border-radius);
            margin-bottom: 10px;
            transition: all 0.5s ease;
            opacity: 0;
        }

        .alert.show {
            opacity: 1;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Farmix</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <% if (!isLoggedIn) { %>
                        <li class="nav-item">
                            <a class="nav-link btn btn-login mx-2" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-register" href="/register">Register</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart">
                                <i class="fas fa-shopping-cart"></i>
                                <span id="cartCount" class="badge bg-danger rounded-pill">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-login" href="/logout">Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/products">Products</a></li>
                <li class="breadcrumb-item active"><%= product.category %></li>
                <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
            </ol>
        </nav>

        <!-- Flash Messages -->
        <% if (messages.error) { %>
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= messages.error %>
            </div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <%= messages.success %>
            </div>
        <% } %>

        <!-- Product Detail -->
        <div class="product-detail-container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-image-container">
                        <% if (product.imageUrl) { %>
                            <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                        <% } else { %>
                            <img src="https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" alt="<%= product.name %>">
                        <% } %>
                        <% if (product.isOrganic) { %>
                            <div class="product-badge">Organic</div>
                        <% } %>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-info-container">
                        <div class="product-category"><%= product.category %></div>
                        <h1 class="product-name"><%= product.name %></h1>
                        <div class="product-price">
                            <span class="currency">₹</span><%= product.price %>
                        </div>
                        
                        <% if (product.description) { %>
                            <div class="product-description">
                                <%= product.description %>
                            </div>
                        <% } %>
                        
                        <div class="product-meta">
                            <div class="meta-item">
                                <i class="fas fa-box"></i>
                                <span><%= product.quantity %> units available</span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Listed on <%= new Date(product.createdAt).toLocaleDateString() %></span>
                            </div>
                        </div>
                        
                        <div class="seller-info">
                            <h4>Seller Information</h4>
                            <p><i class="fas fa-user me-2"></i> <%= product.User.name %></p>
                            <p><i class="fas fa-envelope me-2"></i> <%= product.User.email %></p>
                        </div>
                        
                        <div class="quantity-selector">
                            <label for="quantity">Quantity:</label>
                            <select class="form-select" id="quantity">
                                <% for(let i = 1; i <= Math.min(product.quantity, 10); i++) { %>
                                    <option value="<%= i %>"><%= i %></option>
                                <% } %>
                            </select>
                        </div>
                        
                        <div class="action-buttons">
                            <button class="btn-add-cart" id="addToCartBtn" data-product-id="<%= product.product_id %>">
                                <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                            </button>
                            <a href="/checkout/<%= product.product_id %>" class="btn-buy-now">
                                <i class="fas fa-bolt me-2"></i> Buy Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products -->
        <% if (relatedProducts && relatedProducts.length > 0) { %>
            <div class="related-products">
                <h2>Related Products</h2>
                <div class="row">
                    <% relatedProducts.forEach(function(relatedProduct) { %>
                        <div class="col-md-4 mb-4">
                            <a href="/products/<%= relatedProduct.product_id %>" class="text-decoration-none">
                                <div class="product-card">
                                    <div class="product-card-image">
                                        <% if (relatedProduct.imageUrl) { %>
                                            <img src="<%= relatedProduct.imageUrl %>" alt="<%= relatedProduct.name %>">
                                        <% } else { %>
                                            <img src="https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" alt="<%= relatedProduct.name %>">
                                        <% } %>
                                    </div>
                                    <div class="product-card-info">
                                        <div class="product-card-category"><%= relatedProduct.category %></div>
                                        <h3 class="product-card-name"><%= relatedProduct.name %></h3>
                                        <div class="product-card-price">₹<%= relatedProduct.price %></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Farmix</h5>
                    <p>Your trusted agricultural marketplace connecting farmers and buyers.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light">Home</a></li>
                        <li><a href="/shop" class="text-light">Shop</a></li>
                        <li><a href="/products" class="text-light">Products</a></li>
                        <li><a href="/services" class="text-light">Services</a></li>
                        <li><a href="/about" class="text-light">About</a></li>
                        <li><a href="/contact" class="text-light">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p>Email: info@farmix.com<br>
                    Phone: +1 234 567 890</p>
                </div>
            </div>
            <div class="text-center mt-4">
                <p>&copy; 2024 Farmix. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Notification Container -->
    <div id="notificationContainer" class="notification-container"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize cart from localStorage
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            updateCartCount();
            
            // Add to cart button click handler
            const addToCartBtn = document.getElementById('addToCartBtn');
            if (addToCartBtn) {
                addToCartBtn.addEventListener('click', function() {
                    const productId = addToCartBtn.dataset.productId;
                    const quantity = parseInt(document.getElementById('quantity').value);
                    
                    // Get product details from the page
                    const name = document.querySelector('.product-name').textContent;
                    const price = parseFloat(document.querySelector('.product-price').textContent.replace('₹', ''));
                    const category = document.querySelector('.product-category').textContent;
                    
                    // Get image URL if available
                    let imageUrl = '';
                    const imageElement = document.querySelector('.product-image-container img');
                    if (imageElement) {
                        imageUrl = imageElement.src;
                    }
                    
                    // Check if product is already in cart
                    const existingProductIndex = cart.findIndex(item => item.id === productId);
                    
                    if (existingProductIndex !== -1) {
                        // Update quantity if product already exists
                        cart[existingProductIndex].quantity += quantity;
                    } else {
                        // Add new product to cart
                        cart.push({
                            id: productId,
                            name: name,
                            price: price,
                            category: category,
                            quantity: quantity,
                            imageUrl: imageUrl
                        });
                    }
                    
                    // Save updated cart to localStorage
                    localStorage.setItem('cart', JSON.stringify(cart));
                    
                    // Show success message
                    showNotification(`${quantity} ${quantity > 1 ? 'items' : 'item'} added to cart successfully!`);
                    
                    // Update cart count
                    updateCartCount();
                });
            }
            
            // Function to update cart count
            function updateCartCount() {
                const cartCountElement = document.getElementById('cartCount');
                if (cartCountElement) {
                    // Calculate total quantity of items in cart
                    const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
                    cartCountElement.textContent = totalItems;
                }
            }
            
            // Function to show notification
            function showNotification(message) {
                const notificationContainer = document.getElementById('notificationContainer');
                
                // Create notification element
                const notification = document.createElement('div');
                notification.className = 'alert alert-success';
                notification.innerHTML = `
                    <i class="fas fa-check-circle me-2"></i>
                    ${message}
                `;
                
                // Add notification to container
                notificationContainer.appendChild(notification);
                
                // Fade in
                setTimeout(() => {
                    notification.classList.add('show');
                }, 10);
                
                // Remove notification after 3 seconds
                setTimeout(() => {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        notification.remove();
                    }, 500);
                }, 3000);
            }
        });
    </script>
</body>
</html> 