    </nav>

    <!-- Products Header -->
    <section class="products-header">
        <div class="container">
            <h1>Fresh Agricultural Products</h1>
            <p>Directly from local farmers to your table. Quality, natural and sustainable.</p>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container">
        <!-- Flash Messages -->
        <% if (messages.error) { %>
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= messages.error %>
            </div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <%= messages.success %>
            </div>
        <% } %>

        <!-- Mobile Filter Button -->
        <button class="mobile-filter-button" id="mobileFilterBtn">
            <i class="fas fa-filter"></i>
        </button>

        <!-- Mobile Filter Overlay -->
        <div class="mobile-filter-overlay" id="filterOverlay"></div>

        <div class="row">
            <!-- Filters -->
            <div class="col-lg-3">
                <div class="filters" id="filtersPanel">
                    <div class="mobile-filter-header d-lg-none">
                        <h3 class="filter-heading mb-0">Filters</h3>
                        <button class="mobile-filter-close" id="closeFilterBtn">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <h3 class="filter-heading d-none d-lg-block">Filters</h3>
                    
                    <div class="filter-section category-filter">
                        <h4>Category</h4>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="vegetable" id="vegetables">
                            <label class="form-check-label" for="vegetables">
                                Vegetables
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="fruit" id="fruits">
                            <label class="form-check-label" for="fruits">
                                Fruits
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="grain" id="grains">
                            <label class="form-check-label" for="grains">
                                Grains
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="dairy" id="dairy">
                            <label class="form-check-label" for="dairy">
                                Dairy Products
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="organic" id="organic">
                            <label class="form-check-label" for="organic">
                                Organic
                            </label>
                        </div>
                    </div>
                    
                    <div class="filter-section price-filter">
                        <h4>Price Range</h4>
                        <input type="range" class="form-range" min="0" max="1000" id="priceRange">
                        <div class="price-display" id="priceDisplay">
                            <span>₹0</span>
                            <span>₹1000</span>
                        </div>
                    </div>

                    <div class="d-lg-none">
                        <button class="filter-button" id="applyFilterBtn">Apply Filters</button>
                        <div class="reset-filters" id="resetFilters">Reset All</div>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9">
                <div class="products-count mb-4">
                    Showing <span id="visibleCount"><%= products.length %></span> products
                </div>
                
                <div class="row products-grid">
                    <% products.forEach(function(product) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="product-card">
                                <div class="product-image">
                                    <% if (product.imageUrl) { %>
                                        <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                    <% } else { %>
                                        <img src="https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" alt="<%= product.name %>">
                                    <% } %>
                                    <% if (product.isOrganic) { %>
                                        <div class="product-badge">Organic</div>
                                    <% } %>
                                </div>
                                <div class="product-info">
                                    <div class="product-category"><%= product.category %></div>
                                    <h3 class="product-name"><%= product.name %></h3>
                                    <div class="product-price">
                                        <span class="currency">₹</span><%= product.price %>
                                    </div>
                                    <div class="product-quantity">
                                        <i class="fas fa-box me-1"></i>
                                        <%= product.quantity %> units available
                                    </div>
                                    <% if (product.description) { %>
                                    <div class="product-description">
                                        <%= product.description.length > 80 ? product.description.substring(0, 80) + '...' : product.description %>
                                    </div>
                                    <% } %>
                                    <div class="product-seller">
                                        <i class="fas fa-user"></i>
                                        <%= product.User.name %>
                                    </div>
                                    <div class="product-actions" data-product-id="<%= product.product_id %>">
                                        <a href="/products/<%= product.product_id %>" class="btn-view-product">Details</a>
                                        <button class="btn-add-cart">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
